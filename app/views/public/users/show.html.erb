<h2>ユーザープロフィール</h2>

<div>
  <h4>ユーザーネーム</h4>
  <p><%= @user.name %></p>
  <p style="color: red">
    <% if @user.is_active == false %>
      退会済みユーザー
    <% end %>
  </p>
</div>
<div>
  <h4>都道府県</h4>
  <p>
    <% if @user.hide_prefecture == false %>
      <%= @user.prefecture %>
    <% else %>
      非公開
    <% end %>
  </p>
</div>
<div>
  <h4>誕生年</h4>
  <p>
    <% if @user.hide_birth_year == false %>
      <%= @user.birth_year %>
    <% else %>
      非公開
    <% end %>
  </p>
</div>
<div>
  <h4>自己紹介</h4>
  <p><%= @user.introduction %></p>
</div>

<% if @user.id == current_user.id %>
  <%= link_to '編集', edit_user_path(@user.id) %>
<% end %>
