<% if @model == 'user' %>
	<h2>ユーザー検索：<%= @text %></h2>
  <table>
    <thead>
      <th>ユーザー</th>
      <th>都道府県</th>
      <th>誕生年</th>
      <th>自己紹介</th>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td>
            <%= link_to user_path(record.id) do %>
              <%= image_tag record.get_profile_image(50, 50) %>
              <%= record.name %>
            <% end %>
          </td>
          <td>
            <% if record.hide_prefecture == true %>
              非公開
            <% else %>
              <%= record.prefecture %>
            <% end %>
          </td>
          <td>
            <% if record.hide_birth_year == true %>
              非公開
            <% else %>
              <%= record.birth_year %>
            <% end %>
          </td>
          <td><%= record.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <table>
<% else %>
	<h2>投稿タイトル検索：<%= @text %></h2>
  <%= render '/public/posts', posts: @records %>
<% end %>